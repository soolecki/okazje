<?xml version='1.0' encoding='utf-8'?>
<widget id="com.artwebmedia.okazje" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Okazje</name>
    <description>Najlepsze okazje w jednym miejscu. Wybierz swojÄ…!</description>
    <author email="sebastian.solecki@artweb-medial.com" href="https://artweb-medial.com">Apache Cordova Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <allow-intent href="market:*" />
        <icon src="www/icons/favicon-16x16.png" width="16" height="16" />
        <icon src="www/icons/favicon-32x32.png" width="32" height="32" />
        <icon src="www/icons/favicon-96x96.png" width="96" height="96" />
        <icon src="www/icons/favicon-144x144.png" width="144" height="144" />
        <icon src="www/icons/favicon-192x192.png" width="192" height="192" />
        <icon src="www/icons/favicon-512x512.png" width="512" height="512" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <icon src="www/icons/favicon-16x16.png" width="16" height="16" />
        <icon src="www/icons/favicon-32x32.png" width="32" height="32" />
        <icon src="www/icons/favicon-96x96.png" width="96" height="96" />
        <icon src="www/icons/favicon-144x144.png" width="144" height="144" />
        <icon src="www/icons/favicon-192x192.png" width="192" height="192" />
        <icon src="www/icons/favicon-512x512.png" width="512" height="512" />
    </platform>

    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />

    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
    <plugin name="phonegap-plugin-local-notification" spec="~1.0.1" />
</widget>
